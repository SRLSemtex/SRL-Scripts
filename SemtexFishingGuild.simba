  case random(150) of
	0..15:  begin
			      pickUpMouse();
			      wait(randomRange(250, 400));
			      mouseOffClient(OFF_CLIENT_RANDOM, randomRange(1500, 2500));
		      end;
	16..30: begin
	          sleepAndMoveMouse(randomRange(750, 2500));
			      wait(randomRange(500, 1250));
	        end;
